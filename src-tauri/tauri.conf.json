{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClearComms",
  "version": "0.1.0",
  "identifier": "com.cameroncarlyon.clearcomms",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "ClearComms",
        "label": "main",
        "width": 600,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": false,
        "visible": false,
        "skipTaskbar": true,
        "center": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
  "active": true,
  "targets": "all",
  "icon": [
    "icons/white/32x32.png",
    "icons/white/128x128.png",
    "icons/white/128x128@2x.png",
    "icons/white/icon.icns",
    "icons/white/icon.ico"
  ]
}
}
